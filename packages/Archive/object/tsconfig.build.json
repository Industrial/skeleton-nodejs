{
  "extends": "./tsconfig.json",
  "include": [
    "./src/**/*.cjs",
    "./src/**/*.cts",
    "./src/**/*.js",
    "./src/**/*.jsx",
    "./src/**/*.mjs",
    "./src/**/*.mts",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx",
    "./dist/**/*.cjs",
    "./dist/**/*.cts",
    "./dist/**/*.js",
    "./dist/**/*.jsx",
    "./dist/**/*.mjs",
    "./dist/**/*.mts",
    "./dist/**/*.ts",
    "./dist/**/*.tsx"
  ],
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src"
  }
}
